<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/feature_toggles_override_enable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/override_enable"
        app:layout_constraintBottom_toBottomOf="@id/feature_toggles_reset_all"
        app:layout_constraintEnd_toStartOf="@id/feature_toggles_reset_all"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/feature_toggles_reset_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset_all"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/feature_toggles_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="vertical"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/feature_toggles_reset_all" />
</androidx.constraintlayout.widget.ConstraintLayout>
