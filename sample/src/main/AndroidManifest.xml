<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.redmadrobot.debugpanel">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name="com.redmadrobot.debug_sample.App"
        android:allowBackup="false"
        android:icon="@drawable/ic_app_logo"
        android:label="@string/sample_app_name"
        android:supportsRtl="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="o">
        <activity
            android:name="com.redmadrobot.debug_sample.MainActivity"
            android:enabled="true"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.redmadrobot.debug_sample.SecondActivity" />
    </application>
</manifest>
